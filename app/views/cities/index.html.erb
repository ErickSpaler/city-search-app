
<div class="row justify-content-center">
  <div class="col-sm-4 my-3">
    <h1>City Search App</h1>
    <%= form_tag(cities_path, method: :get) do %>
      <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Buscar cidade"
        %>
      <%= submit_tag "Buscar", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <% if @cities.any? %>
        <table class="table table-striped table-bordered table-hover align-middle">
          <thead>
            <th>Estado</th>
            <th>Cidade</th>
          </thead>
          <tbody>
            <% @cities.each do |city| %>
              <tr>
                <td><%= city.state.name %></td>
                <td><%= city.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <em>Nenhuma cidade encontrada.</em>
      <% end %>
    </div>
  </div>
</div>
