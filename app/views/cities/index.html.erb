<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center">City Search App</h2>
      <form action="/cities" method="get">
        <div class="input-group mb-3">
          <input type="text" class="form-control" name="query" value="<%= params[:query] %>" placeholder="Digite a cidade ou estado">
          <button class="btn btn-primary" type="submit">Buscar</button>
        </div>
      </form>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @cities.any? %>
        <table class="table table-bordered table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Estado</th>
              <th>Cidade</th>
            </tr>
          </thead>
            <tbody>
              <% @cities.each do |city| %>
                <tr>
                  <td><%= city.state.name %></td>
                  <td><%= city.name %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
      <% else %>
        <div class="alert alert-warning" role="alert">
          <strong>Nanhuma cidade encontrada.</strong> Tente novamente.
        </div>
      <% end %>
    </div>
  </div>
</div>
